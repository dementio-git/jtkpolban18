<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_logbook_label_stats_graph" model="ir.ui.view">
        <field name="name">logbook.label.stats.graph</field>
        <field name="model">logbook.label.stats</field>
        <field name="arch" type="xml">
            <graph string="Frekuensi Label Logbook" type="bar">
                <field name="count" type="measure"/>
                <field name="project_course_id" type="row"/>
                <field name="label_id" type="col"/>
            </graph>
        </field>
    </record>


    <record id="view_logbook_label_stats_graph_label" model="ir.ui.view">
        <field name="name">logbook.label.stats.graph.label</field>
        <field name="model">logbook.label.stats</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <graph string="Label per Proyek" type="bar">
                <field name="count" type="measure"/>
                <field name="label_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="action_logbook_label_stats" model="ir.actions.act_window">
        <field name="name">Dashboard Frekuensi Label</field>
        <field name="res_model">logbook.label.stats</field>
        <field name="view_mode">graph</field> <!-- tetap pakai 'graph' -->
        <field name="view_id" ref="jtk_logbook_analytics.view_logbook_label_stats_graph"/> <!-- ini view awal -->
        <field name="context">{'group_by': 'project_course_id'}</field>
    </record>



</odoo>