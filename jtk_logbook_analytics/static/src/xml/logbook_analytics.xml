<templates xml:space="preserve">
    <t t-name="jtk_logbook_analytics.LogbookAnalytics" owl="1">
        <div class="container-fluid">
            <div class="row mt-3">
                <div class="col-12 d-flex align-items-center">
                    <label class="form-label me-2 fw-bold">Tampilan Berdasarkan</label>
                    <select class="form-select w-auto" t-model="state.viewMode" t-on-change="onChangeViewMode">
                        <option value="project">Project</option>
                        <option value="class">Class</option>
                        <option value="student">Student</option>
                    </select>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <t t-component="currentComponent"/>
                </div>
            </div>
        </div>
    </t>
</templates>
