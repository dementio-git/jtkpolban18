<templates xml:space="preserve">
  <t t-name="jtk_logbook_analytics.LogbookDashboard" owl="1">
    <div class="logbook-dashboard-wrapper p-3">
      <h2>ðŸ“Š Dashboard Analitik Logbook</h2>

      <!-- Loading saat data masih kosong -->
      <div t-if="state.data.length === 0">Loading data...</div>

      <!-- Render chart dan tabel HANYA kalau data sudah ada -->
      <t t-if="state.data.length > 0">
        <div class="logbook-dashboard-scroll">
          <h3>Grafik Frekuensi Label per Minggu</h3>
          <canvas t-ref="barChartRef" width="600" height="300" style="border: 1px solid red;"></canvas>

          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Label</th>
                <th>Minggu</th>
                <th>Kelas</th>
                <th>Frekuensi</th>
                <th>Total Poin</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="state.data" t-as="row" t-key="row.id">
                <tr>
                  <td><t t-esc="row.label_id and row.label_id[1] or 'Unknown'"/></td>
                  <td><t t-esc="row.week_id and row.week_id[1] or 'Unknown'"/></td>
                  <td><t t-esc="row.class_id and row.class_id[1] or 'Unknown'"/></td>
                  <td><t t-esc="row.count"/></td>
                  <td><t t-esc="row.total_point"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>

    </div>
  </t>
</templates>
